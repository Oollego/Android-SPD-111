<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calc_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="calc_func_btn" parent="calc_btn">
        <item name="android:background">@drawable/calc_func_btn</item>
    </style>
    <style name="calc_digit_btn" parent="calc_btn">
        <item name="android:background">@drawable/calc_digit_btn</item>
    </style>
    <style name="calc_row_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="calc_equal_btn" parent="calc_btn">
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/calc_btn_equal</item>
        <item name="android:background">@drawable/calc_equal_btn</item>
    </style>
</resources>
